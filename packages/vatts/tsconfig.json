{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "allowJs": true
  },
  "include": ["src", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
